@model ETicaret.Areas.Admin.Model.ProductModel

@{
    ViewData["Title"] = "ProductsListe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ProductsListe</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product ıd</th>
            <th>product name</th>
            <th>Category name</th>
            <th>Brand</th>
            <th>Description</th>
            <th>size</th>
            <th>unit</th>
            <th>unir price</th>
            <th>Image</th>
            <th>Galleriye Git</th>
            <th>Galeriye Resim Ekle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Plist)
        {
        <tr>
            <td>@item.id</td>
            <td>@item.productName</td>
            <td>@item.categoryName</td>
            <td>@item.brand</td>
            <td>@item.description</td>
            <td>@item.size</td>
            <td>@item.unit</td>
            <td>@item.unitPrice</td>
            <td><img src="/@item.image" height="50" width="50" /></td>
            <td><a href="/Admin/Gallery/Liste/@item.id">Resim Gör<i class="fas fa-search"></i></a></td>
            <td><a href="/Admin/Gallery/EkleCoklu/@item.id">Resim Ekle </a></td>
        </tr>

        }
    </tbody>
</table>
<form asp-contoller="/Admin/Products" action="Ekle" method="get">
    <input type="submit" value="Ürün Ekle" class="btn-success btn-group-lg" />
</form>