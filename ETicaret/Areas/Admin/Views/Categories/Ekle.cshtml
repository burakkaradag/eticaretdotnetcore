@model ETicaret.Areas.Admin.Model.CategoriesModel

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Ekle</h1>

<h4>Ürün Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="/Admin/Categories" asp-action="Ekle" method="post">
            @Html.HiddenFor(x => x.Category.CategoryId)


            <div class="form-group">
                @Html.LabelFor(x => x.Category.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Category.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
